{
  "env": {
    "browser": true,
    "es2021": true,
    "commonjs": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended"
  ],
  "parserOptions": {
    "requireConfigFile": false,
    "ecmaVersion": 12,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    },
    "babelOptions": {
      "presets": [
        "@babel/preset-react"
      ]
    }
  },
  "plugins": [
    "react",
    "react-hooks"
    //    "only-warn"
  ],
  "rules": {
    "multiline-ternary": "off",
    "space-before-function-paren": "off",
    "camelcase": "off",
    "semi": "off",
    "no-use-before-define": "off",
    "react/prop-types": "off",
    "react/no-unescaped-entities": "off"
  },
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx"
      ],
      "rules": {
        "react/prop-types": "error"
      }
    }
  ]
}
